<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.line.details</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_sale_order_lines"
                        class="oe_stat_button"
                        icon="fa-list"
                        type="object"
                        help="List view of order lines">

                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Lines</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.line.details</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="order_id" position="before">
                <field name="sequence" widget="handle" />
                <field name="layout_category_id" groups="sale.group_sale_layout"/>
                <field name="product_id" />
            </field>
        </field>
    </record>

    <record id="action_sale_order_lines" model="ir.actions.act_window">
        <field name="name">Sale Order Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale.view_order_line_tree"/>
        <field name="limit">200</field>
        <field name="domain">[('order_id', '=', active_id)]</field>
    </record>

</odoo>
